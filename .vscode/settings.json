// Place your settings in this file to overwrite default and user settings.
{
  "editor.scrollBeyondLastLine": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "dist": true,
    "cache": true,
    // "node_modules": true,
    "bower": true,
    "bower_components": true,
    "/output/": true,
    "**/*.js.map": true,
    "**/bundle-*": true,
    "**/chunk*": true,
    "**/*.cache": true,
    "/.cache/:true": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#7c1f79",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBar.activeBackground": "#333333",
    "activityBar.activeBorder": "#f828a8",
    "activityBarBadge.background": "#f828a8",
    "activityBarBadge.foreground": "#e7e7e7",
    "editorGroup.border": "#333333",
    "panel.border": "#333333",
    "sash.hoverBorder": "#333333",
    "sideBar.border": "#333333",
    "statusBar.background": "#1a1a1a",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#0c0707",
    "statusBarItem.remoteBackground": "#1a1a1a",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#1a1a1a",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#1a1a1a99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "peacock.color": "#1a1a1a",
  "svg.preview.background": "transparent"
}